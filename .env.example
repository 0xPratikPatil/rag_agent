# Core runtime
RAG_AGENT_LOG_LEVEL=INFO
RAG_AGENT_LOG_COLOR=true
RAG_AGENT_GRAPH_RECURSION_LIMIT=100

# LLM (OpenAI)
OPENAI_API_KEY=your-openai-api-key
RAG_AGENT_LLM_MODEL=gpt-4o-mini
RAG_AGENT_LLM_TEMPERATURE=0.2
RAG_AGENT_LLM_TIMEOUT_S=60

# Query planning
RAG_AGENT_QUERIES_PER_SOURCE=3
RAG_AGENT_MAX_SELECTED_SOURCES=4
RAG_AGENT_ALLOW_SOURCE_FALLBACK=true

# Retrieval (Databricks Vector Search hybrid)
RAG_AGENT_RETRIEVAL_TOP_K=8
RAG_AGENT_RETRIEVAL_VECTOR_WEIGHT=0.6
RAG_AGENT_RETRIEVAL_BM25_WEIGHT=0.4
RAG_AGENT_RETRIEVAL_VECTOR_QUERY_TYPE=ann
RAG_AGENT_RETRIEVAL_BM25_QUERY_TYPE=FULL_TEXT
RAG_AGENT_RETRIEVAL_TEXT_COLUMN=text
RAG_AGENT_RETRIEVAL_RETURN_COLUMNS=text

# Ranking
RAG_AGENT_RRF_K=60
RAG_AGENT_TOP_K_CONTEXT=8

# Context sufficiency / retry loop
RAG_AGENT_MIN_DOCS=4
RAG_AGENT_MIN_DISTINCT_SOURCES=1
RAG_AGENT_MAX_LOOP_COUNT=1
RAG_AGENT_MIN_AUTHORITATIVE_DOCS=1
RAG_AGENT_AUTHORITATIVE_SOURCES=ETQ,SN_KB

# Databricks connectivity (Vector Search)
RAG_AGENT_DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
RAG_AGENT_DATABRICKS_TOKEN=your-databricks-token
RAG_AGENT_DATABRICKS_VECTOR_SEARCH_ENDPOINT=your-vector-search-endpoint

# Per-source index names (examples)
RAG_AGENT_ETQ_VECTOR_INDEX=ETQ_VECTOR_INDEX
RAG_AGENT_ETQ_BM25_INDEX=ETQ_BM25_INDEX
RAG_AGENT_ITEX_VECTOR_INDEX=ITEX_VECTOR_INDEX
RAG_AGENT_ITEX_BM25_INDEX=ITEX_BM25_INDEX
RAG_AGENT_SN_KB_VECTOR_INDEX=SN_KB_VECTOR_INDEX
RAG_AGENT_SN_KB_BM25_INDEX=SN_KB_BM25_INDEX
RAG_AGENT_SN_TICKETS_VECTOR_INDEX=SN_TICKETS_VECTOR_INDEX
RAG_AGENT_SN_TICKETS_BM25_INDEX=SN_TICKETS_BM25_INDEX

